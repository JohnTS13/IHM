<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Plantas"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtTituloPlantas4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12sp"
        android:text="Plantas"
        android:textColor="@color/purple_200"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45sp"
        android:paddingRight="45sp"
        android:src="@drawable/separador" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="120sp"
        android:paddingRight="50sp">

        <Button
            android:id="@+id/button2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Agregar plantas" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="41dp"
            android:layout_height="212dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

</LinearLayout>