<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.Generales"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtTituloGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_general"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:paddingTop="12sp"
        android:fontFamily="@font/footlight_mt_light"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45sp"
        android:paddingRight="45sp"
        android:src="@drawable/separador" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_Temperatura"
            android:paddingLeft="40sp"
            android:textSize="20sp"
            android:paddingRight="40sp"
            android:fontFamily="@font/footlight_mt_light"/>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/footlight_mt_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_Humedad"
            android:paddingLeft="67sp"
            android:textSize="20sp"
            android:paddingRight="40sp"
            android:fontFamily="@font/footlight_mt_light"/>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/footlight_mt_light"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estado_planta"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:paddingTop="12sp"
        android:paddingVertical="10sp"
        android:fontFamily="@font/footlight_mt_light"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>